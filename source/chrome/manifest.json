{
  "manifest_version": 2,

  "name": "GitHub Code Reviews",
  "description": "",
  "version": "0.2.0",

  "permissions": [
    "webNavigation",
    "background",
    "tabs",
    "storage",
    "http://ghcr-staging.herokuapp.com/"
  ],

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "css": ["ghcr.css"],
      "js": ["ghcr.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "ghcr.js.map"
  ],

  "options_page": "settings.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

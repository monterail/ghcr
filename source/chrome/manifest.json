{
  "manifest_version": 2,

  "name": "GitHub Code Reviews",
  "description": "",
  "version": "0.1.2",

  "permissions": [
    "webNavigation",
    "background",
    "tabs",
    "<all_urls>"
  ],

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "css": ["ghcr.css"],
      "js": ["ghcr.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "ghcr.js.map"
  ]
}

{
  "manifest_version": 2,

  "name": "GitHub Code Reviews",
  "description": "",
  "version": "0.1.2",

  "permissions": [
    "webNavigation",
    "background",
    "tabs",
    "<all_urls>"
  ],

 "background": {
    "scripts": ["main.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["ghcr.css"],
      "js": ["ghcr.js"]
    }
  ],

  "web_accessible_resources": [
    "ghcr.js.map"
  ]
}
